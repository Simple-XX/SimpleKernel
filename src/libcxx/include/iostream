#ifndef _IOSTREAM_
#define _IOSTREAM_

namespace std {
    class ostream {
    private:
    protected:
        ostream(const ostream &lhs);

    public:
        enum openmode : uint8_t {
            in     = 1,
            out    = 2,
            binary = 4,
            trunc  = 8,
        };

        ostream(void);
        ~ostream(void);
        ostream &operator<<(char c);
        ostream &operator<<(int n);
        ostream &operator<<(const char *lhs);
        ostream &operator<<(ostream &(*)(ostream &));
    };

    inline ostream &endl(ostream &lhs) {
        return lhs << '\n';
    }

    static ostream cout;
};

#endif /* _IOSTREAM_ */
